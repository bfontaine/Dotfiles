[user]
	name  = Baptiste Fontaine
	email = b@ptistefontaine.fr
[alias]
	a    = add
	br   = branch
	ca   = commit --amend
	cae  = commit --amend --no-edit
	chp  = cherry-pick
	cl   = clone
	cm   = commit -m
	co   = checkout
	df   = diff
	f    = fetch
	fixup = commit --amend --no-edit .
	fp   = format-patch
	lg   = log --graph --pretty=format:'%Cred%h%Creset - %C(blue bold)%an%Creset: %C(cyan)%s%Creset %Cgreen(%ar)%Creset'
	l1   = lg -n 1
	m    = mv
	# show all commits present on the current branch but not on its attached
	# remote.
	p    = !git lg @{u}..
	s    = status --short --branch
	sp   = stash pop
	sd   = diff --cached

[core]
	pager = cat
	editor = vim
	excludesFile = ~/.cvsignore
	# Old gits
	excludesfile = ~/.cvsignore

# Reading
# =======

[color]
	ui = auto
[color "branch"]
	current = bold
	upstream = cyan

[pager]
	blame = less -S

# Browsing
# ========

[diff]
	algorithm = patience
	compactionHeuristic = true
	# https://git-scm.com/docs/git-diff#git-diff---color-movedltmodegt
	colorMoved = default
	noprefix = true
[grep]
	extendRegexp = true
[status]
	showUntrackedFiles = all

# History
# =======

[branch]
	autosetupmerge = true
[merge]
	conflictStyle = diff3
[rebase]
	# When interactively rebasing, automatically mark commits whose message
	# starts with 'squash!' or 'fixup!' followed by a commit hash as
	# squashes/fixups of the specified commit.
	# See https://robots.thoughtbot.com/autosquashing-git-commits
	autoSquash = true
	autoStash = true
[rerere]
	enabled = true
[tag]
	sort = version:refname

# Remotes
# =======

[fetch]
	prune = true
	fsckobjects = true
[push]
	default = upstream
[pull]
	# git pull == git pull --rebase
	rebase = true
# https://groups.google.com/forum/#!topic/binary-transparency/f-BI4o8HZW0
[transfer]
	fsckobjects = true
[receive]
	fsckObjects = true

# Third Parties
# =============

[github]
	user = bfontaine
[git-up "bundler"]
	check = true
[web]
	browser = chrome
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
