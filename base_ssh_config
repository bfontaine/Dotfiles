# This allows you to use gh:bfontaine/ex instead of git@github.com:bfontaine/ex
# It confuses GitLink in IntelliJ so you have to add `127.0.0.1 gl gh` in /etc/hosts and
# tell nginx to redirect them:
#
#     server {
#       server_name gl;
#       return 301 https://gitlab.com$request_uri;
#     }
#     server {
#       server_name gh;
#       return 301 https://github.com$request_uri;
#     }
#
# Also, uncheck "Force HTTPS" in GitLink settings.
#
Host github gh
  Hostname github.com
  User git

Host gitlab gl
  Hostname gitlab.com
  User git

# Ghosttyâ€™s TERMINFO is not properly supported everywhere. Set the TERM to xterm when SSH-ing on servers
# https://github.com/ghostty-org/ghostty/discussions/3161#discussioncomment-11688078
Match Final Exec "echo $TERM | grep -q xterm-ghostty"
  SetEnv TERM=xterm-256color
